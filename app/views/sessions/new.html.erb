<section>
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <%= bootstrap_form_tag url: signin_path, html: { class: 'sign_in'} do |f| %>
        <header>
          <h3 class="text-center titles">Sign in</h3>
        </header>
        
        <div class="form-group">
          <label for="email" class="control-label col-sm-3">Email Address</label>
          <div class="col-sm-9">
           <%= f.email_field :email, class: "form-control", hide_label: true %>
          </div>
        </div>

        <div class="form-group">
          <label class="control-label col-sm-3">Password</label>
          <div class="col-sm-9">
           <%= f.password_field :password, class: "form-control", hide_label: true %>
          </div>
        </div>

        <div class="form-group actions control-group">
          <div class="col-sm-offset-3 col-sm-9">
            <%= f.submit "Sign in", class: "btn btn-success" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-10 col-offset-1">
      <hr>
      <div class="form-group" id="signup-link">
        Or<br>
        <%= link_to "Sign up", signup_path %>
      </div>
    </div>
  </div>
</section>