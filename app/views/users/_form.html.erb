<%= bootstrap_form_for(@user, :html => { class: 'form-horizontal'}) do |f| %>
   <div class="form-group" >
     <label for="name" class="control-label col-md-3">First Name:</label>
     <div class="col-md-9">
      <%= f.text_field :first_name, class: "form-control", hide_label: true %>
     </div>
   </div>

   <div class="form-group" >
     <label for="name" class="control-label col-md-3">Last Name:</label>
     <div class="col-md-9">
      <%= f.text_field :last_name, class: "form-control", hide_label: true %>
     </div>
   </div>

   <div class="form-group" >
     <label for="name" class="control-label col-md-3">Email:</label>
     <div class="col-md-9">
      <%= f.text_field :email, class: "form-control", hide_label: true %>
     </div>
   </div>

   <div class="form-group" >
     <label for="name" class="control-label col-md-3">Password:</label>
     <div class="col-md-9">
      <%= f.text_field :password, class: "form-control", hide_label: true %>
     </div>
   </div>


   <div class="form-group" >
     <label for="name" class="control-label col-md-3">Confirm Password:</label>
     <div class="col-md-9">
      <%= f.text_field :password, class: "form-control", hide_label: true %>
     </div>
   </div>


   <div class="form-group actions control-group" >
    <div class="col-md-offset-3">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
   </div>

<% end %>
