<%= bootstrap_form_for(@publisher, :html => { class: 'form-horizontal'}) do |f| %>
   <div class="form-group" >
     <label for="name" class="control-label col-md-3">Publisher Name:</label>
     <div class="col-md-9">
      <%= f.text_field :name, class: "form-control", hide_label: true %>
     </div>
   </div>


   <div class="form-group actions control-group" >
    <div class="col-md-offset-3">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
   </div>

<% end %>
